<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mobile.lapa.waitandsee.notification"
    tools:showIn="@layout/activity_notification"
    android:background="@drawable/gradient">


    <TextView
        android:paddingTop="20dp"
        android:id="@+id/titleTextViewCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/sap_yellow"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/messageTextViewCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_below="@id/titleTextView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/buttomTextViewCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Powered By SAP Hana"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_below="@id/messageTextViewCon"
        android:layout_gravity="bottom|center_horizontal" />


    <ImageView
        android:paddingTop="50dp"
        android:id="@+id/imageViewCon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttomTextViewCon"
        android:foregroundGravity="bottom"
        android:src="@raw/work01" />

</RelativeLayout>
